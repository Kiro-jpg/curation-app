<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

<body>
    <section id="HomePage">
        <%- include("./partials/nav-search.ejs") %>

        <div class="HomeContainer">
            <div class="row g-0">
                <div class="col-md-9 homeplaylistdisplay">
                    <div class="col-md-3">
                        <div class="blocks genPlaylist">
                            <div class="block homeplaylist">
                                <div class="overlay">
                                    <img src="http://drh.img.digitalriver.com/DRHM/Storefront/Site/atvi/cm/images/site/play-button-overlay.png"
                                        alt="Play" />
                                </div>
                                <img src="https://images-ext-1.discordapp.net/external/9GQvcvGvpTEOLlmYvkv05tEjjDgI0HCbv8zkcwmOR-M/http/static.djbooth.net/pics-features/chance-the-rapper-best-artwork.jpg"
                                    alt="Image" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="blocks genPlaylist">
                            <div class="block homeplaylist">
                                <div class="overlay">
                                    <img src="http://drh.img.digitalriver.com/DRHM/Storefront/Site/atvi/cm/images/site/play-button-overlay.png"
                                        alt="Play" />
                                </div>
                                <img src="https://images-ext-1.discordapp.net/external/9GQvcvGvpTEOLlmYvkv05tEjjDgI0HCbv8zkcwmOR-M/http/static.djbooth.net/pics-features/chance-the-rapper-best-artwork.jpg"
                                    alt="Image" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="blocks genPlaylist">
                            <div class="block homeplaylist">
                                <div class="overlay">
                                    <img src="http://drh.img.digitalriver.com/DRHM/Storefront/Site/atvi/cm/images/site/play-button-overlay.png"
                                        alt="Play" />
                                </div>
                                <img src="https://images-ext-1.discordapp.net/external/9GQvcvGvpTEOLlmYvkv05tEjjDgI0HCbv8zkcwmOR-M/http/static.djbooth.net/pics-features/chance-the-rapper-best-artwork.jpg"
                                    alt="Image" />
                            </div>
                        </div>
                    </div>


                </div>
                <div class="col-md-3">
                    <div class="Profile">
                        <div class="card userprof" style="background-color: black;">
                            <div class="ds-top"></div>
                            <div class="avatar-holder">
                                <img src="https://media.discordapp.net/attachments/670281324262719499/796319489708261377/image0.png?width=298&height=530"
                                    alt="Lucas">
                            </div>
                            <div class="name">
                                <% if (user.length > 0) { %>
                                <% user.forEach(user => { %>
                                <a href="/users/<%= user._id %>" target="_blank"><%= user.name %></a>
                                <% }) %>
                                <% } else { %>
                                <p>There are no user to display...</p>
                                <% } %>
                            </div>
                            <div class="ds-info information">
                                <div class="container ds playlist">
                                    <h6 title="Number of projects created by the user">Playlist</h6>
                                    <p>0</p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include("./partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/javascripts/main.js"></script>
</body>

</html>
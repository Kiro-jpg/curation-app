<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav-search.ejs") %>
    <div class="container Profilecon">
        <div class="Profilecon2">
            <div class="row">
                <div class="col-md-2 ProfPic">
                    <img src="<%= user.image %>" class="profpic" alt="">
                </div>
                <div class="col-md-7 BionFollowers">
                    <h1 class="Nameuser"><%= user.name %></h1>
                    <p class="userbio"><%= user.bio %></p>
                </div>
            </div>

            <!-- Button trigger modal -->
            <button class="btn editbtn" data-bs-toggle="modal" data-bs-target="#exampleModal"><i
                    class="fas fa-edit fa-lg edit"></i></button>
            <!-- Modal -->
            <div class="modal fade" style="margin-top: 10rem
            ;" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header modalcon">
                            <h5 class="modal-title" id="exampleModalLabel">Edit Playlist</h5>
                        </div>
                        <form action="update/<%= user._id %>" method="POST">
                            <div class="modal-body modalcon">

                                <label for="userName">Name:</label><br>
                                <input type="text" id="userName" name="username"><br>
                                <label for="userDescription">Description:</label><br>
                                <input type="text" id="userDescription" name="userdescription"><br>
                                <label for="userimgLink">User Image Link:</label><br>
                                <input type="text" id="userimgLink" name="userimagelink">

                            </div>
                            <div class="modal-footer modalcon">
                                <button type="button" class="btn btn-dark" data-bs-dismiss="modal"><i
                                        class="fas fa-times-circle"></i></button>
                                <button type="submit" class="btn btn-dark"><i class="fas fa-save"></i></button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
        <div class="container Userplaylist">

            <div class="blocks userPlaylist">
                <% if (user.playlist.length > 0) { %>
                <% for (var i = 0; i < user.playlist.length; i++) {%>
                <div class="block userlist">
                    <a href="/playlist/<%= user.playlist[i]._id %>">
                        <img src="<%= user.playlist[i].image %>" alt="Image" /></a>
                </div>
                <% } %>
                <% } else { %>
                <p>There are no playlists to display...</p>
                <% } %>
            </div>


        </div>
    </div>
    <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous">
    </script>
    <script src="/javascripts/main.js"></script>
</body>


</html>
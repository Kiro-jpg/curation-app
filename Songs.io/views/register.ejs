<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav-search.ejs") %>

    <div class="registerform">
        <div class="row mt-5 g-0">
            <div class="col-md-6 m-auto">
                <div class="card card-body" style="background-color: #141414; border: 1px solid #3b176e;">
                    <h1 class="text-center mb-3" style="color: white;">
                        <i class="fas fa-user-plus regicon"></i> Register
                    </h1>
                    <%- include ("./partials/messages.ejs"); %>
                    <form class="regform" action="/register" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                                value="<%= typeof name != 'undefined' ? name : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="name">Username</label>
                            <input type="username" id="username" name="username" class="form-control"
                                placeholder="Enter Username"
                                value="<%= typeof username != 'undefined' ? username : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                                value="<%= typeof email != 'undefined' ? email : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Create Password"
                                value="<%= typeof password != 'undefined' ? password : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password2">Confirm Password</label>
                            <input type="password" id="password2" name="password2" class="form-control"
                                placeholder="Confirm Password"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                        </div>
                        <button type="submit" class="btn btn-block regbtn" style="color: #fb3f94;">
                            Register
                        </button>
                    </form>
                    <p class="lead mt-4" style="color: white;">Have An Account? <a href="/users/login">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>